$("#table tr").click(function(){
   $(this).addClass('selected').siblings().removeClass('selected');    
   var value=$(this).find('td:first').html(); 
   //if
   var url=window.location.href;
   var x = url.split("/");
   x=x[x.lenght-1];
   var i=x.indexOf(".do");
   x=x.substring(0,i+3);
   window.location.href=x+"?makt="+value;
});

function linkTo(ma,value){
   var url=window.location.href;
   var x = url.split("/");
   x=x[x.lenght-1];
   var i=x.indexOf(".do");
   x=x.substring(0,i+3);
   window.location.href=x+"?"+ma+"="+value;
}

$("#table tr").click(function(){
	var value=$(this).find('td:first').html(); 
	linkTo("makt",value);
});
$("#table-ts tr").click(linkTo("mats"));